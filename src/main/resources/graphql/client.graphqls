type Client {
    id: Int,
    name: String,
    email: String
}

type Query {

    getClient(id: ID): Client

    getAllClients: [Client]
}

input ClientInput {
    name: String,
    email: String
}


type Mutation {

    saveClient(
        clientInput: ClientInput
    ) : Client

    updateClient(
        id: ID,
        clientInput: ClientInput
    ): Client

    deleteClient(id: ID) : Boolean

}